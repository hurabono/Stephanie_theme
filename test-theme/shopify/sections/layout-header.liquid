<header class="text-gray-600 body-font">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <nav class="flex lg:w-2/5 flex-wrap items-center text-base md:ml-auto">
      <!-- shop manu -->
      <div class="mr-5 hover:text-gray-900">
        {% render 'layout-menu', class: 'space-x-4' %}
      </div>
    </nav>

    <!-- shop logo and name -->
    <a href="{{ routes.root_url }}"
      class="flex order-first lg:order-none lg:w-1/5 title-font font-medium items-center text-gray-900 lg:items-center lg:justify-center mb-4 md:mb-0">
      <h1 class="ml-3 text-xl"> {{ shop.name }}</h1>
    </a>
    <div class="lg:w-2/5 inline-flex lg:justify-end ml-5 lg:ml-0">
      <!-- account and cart -->
      {% assign link_class = 'flex flex-col justify-center items-center text-sm text-gray-600 hover:text-black
      font-medium transition duration-150 p-2' %}
      {% assign icon_class = 'w-auto h-7 text-black mb-2' %}

      <div class="hidden md:flex space-x-2 lg:space-x-6">
        <a href="{{ routes.search_url }}" class="{{ link_class }}">
          {% render 'icon-search', class: icon_class %}
          {{ 'action.search' | t }}
        </a>

        {% if shop.customer_accounts_enabled %}
        <a href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}"
          class="{{ link_class }}">
          {% render 'icon-account', class: icon_class %}
          {{ 'action.account' | t }}
        </a>
        {% endif %}

        <a href="{{ routes.cart_url }}" class="{{ link_class }} relative">
          {% render 'icon-cart', class: icon_class %}
          {{ 'action.cart' | t }}

          {% if cart.item_count > 0 %}
          <div
            class="w-5 h-5 flex justify-center items-center bg-black text-white text-xs border border-white rounded-full absolute top-0 right-0">
            {{ cart.item_count }}
          </div>
          {% endif %}
        </a>
      </div>
    </div>
  </div>
</header>



{% schema %}
{
"name": "t:sections.header.name",
"settings": [
{
"type": "paragraph",
"content": "t:sections.header.settings.paragraph"
}
]
}
{% endschema %}