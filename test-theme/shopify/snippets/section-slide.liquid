<div class="{{ class | default: '' }}" style="{{ style | default: '' }}">

      <div
            class="mb-12 flex justify-center items-center flex-1 flex-shrink-0 bg-gray-100 overflow-hidden shadow-lg relative py-16 md:py-20 xl:py-48">
            <!-- image - start -->
            {% if image %}
            <img sizes="
                        (min-width: 1280px) 1500px,
                        (min-width: 1024px) 1250px,
                        (min-width: 768px) 1000px,
                        (min-width: 640px) 720px,
                        600px
                        " srcset="
                        {{ image | img_url: '600x' }} 600w,
                        {{ image | img_url: '720x' }} 720w,
                        {{ image | img_url: '1000x' }} 1000w,
                        {{ image | img_url: '1250x' }} 1250w,
                        {{ image | img_url: '1500x' }} 1500w
                        " src="{{ image | img_url: '1500x' }}" alt="{{ image.alt }}" loading="lazy"
                  class="swiper-lazy w-full h-full object-cover object-center absolute inset-0">
            {% else %}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover object-center absolute inset-0' }}
            {% endif %}
            <!-- image - end -->

            <!-- overlay - start -->
            <div class="bg-gray-500 mix-blend-multiply absolute inset-0"></div>
            <!-- overlay - end -->

            <!-- text start -->
            <div class="sm:max-w-xl flex flex-col items-center relative p-4">
                  <p class="text-indigo-200 text-lg sm:text-xl text-center mb-4 md:mb-8">{{ text }}</p>
                  <div class="headlines text-4xl sm:text-5xl md:text-6xl font-bold text-center mb-8 md:mb-12">{{headline }}</div>

                  <div class="w-full flex flex-col sm:flex-row sm:justify-center gap-2.5">
                        <a href="{{ button-url }}"
                              class="inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3">{{
                              button-text }}</a>
                  </div>
            </div>
            <!-- text end -->
      </div>

</div>